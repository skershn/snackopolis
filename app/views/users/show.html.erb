
<div class= "booyah-box">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'user.png' %>
    </div>

    <div class="col-8">
      <h1><%= @user.email %></h1>
      <h3>member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
      <h4>total comments: <%= @user.comments.count %></h4>
      <h4>total five-star reviews: <%= @user.comments.where(rating: '5_stars').count %></h4>
    </div>
  </div>
  <div class="clear"></div>
</div>
